<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    tools:context=".Profil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tv_header_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Profil"
            android:textColor="?attr/colorOnSurface"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Profile Card Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profile_header"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_header_profil">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/main"
                    app:civ_border_color="?attr/colorPrimary"
                    app:civ_border_width="3dp"
                    tools:src="@drawable/main" />

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Byatara Ade W."
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="byan.byatara@gmail.com"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="32dp"
                    android:text="Edit Profil Kamu"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp"
                    app:backgroundTint="?attr/colorSurfaceContainerHigh"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cards Container Row 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_data_pribadi"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="6dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toStartOf="@id/card_data_aktivitas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_profile_header"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Pribadi"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/birth"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Ulang Tahun" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Ulang Tahun"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_ultah_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31/05/2008"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="31/05/2008" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/gender"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Gender" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_gender_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Laki-laki" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_data_aktivitas"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="6dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_data_pribadi"
            app:layout_constraintTop_toBottomOf="@id/card_profile_header"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktivitas"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/scholl"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Sekolah" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Sekolah"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_orderan_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SMKN 6"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="SMKN 6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/kelas"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Kelas" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Kelas"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_ulasan_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 RPL"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="11 RPL" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cards Container Row 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_data_portofolio"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toStartOf="@id/card_data_koding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_data_pribadi"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portofolio"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/music"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Musik" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Lagu"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvmusic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berdansa"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="Berdansa" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/hoby"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Hobi" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Hobi"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvhoby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Musik"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="Musik" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_data_koding"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="6dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_data_portofolio"
            app:layout_constraintTop_toBottomOf="@id/card_data_aktivitas"
            app:layout_constraintWidth_percent="0.48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemrograman"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/programming"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Bahasa" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Bahasa"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvkodingbhs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JavaScript"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="JavaScript" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/framework"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Ikon Framework" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Framework"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvframework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next.js"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="Next.js" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>