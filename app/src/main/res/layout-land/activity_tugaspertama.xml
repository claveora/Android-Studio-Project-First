<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorScreenBackground"
    tools:context=".tugaspertama">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_main"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/main"
        app:civ_border_color="?attr/colorPrimary"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/sapa"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_image_main"
        app:layout_constraintTop_toTopOf="@id/profile_image_main" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Container Card Utama - Semua Menu dalam Satu Card Besar -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/MenuAplikasi"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <!-- Baris 1: 3 Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_menu_list"
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="?attr/colorSurfaceContainer"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="61dp"
                                    android:src="@drawable/list"
                                    app:tint="?attr/colorOnSurface"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/menu"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_menu_form"
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="?attr/colorSurfaceContainer"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/form"
                                    app:tint="?attr/colorOnSurface"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/form"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_menu_calculator"
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="?attr/colorSurfaceContainer"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/calculator"
                                    app:tint="?attr/colorOnSurface"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/tv_menu_calculator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/calculator"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Baris 2: 3 Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_menu_temperature"
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="?attr/colorSurfaceContainer"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/temperature"
                                    app:tint="?attr/colorOnSurface"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/calculator"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_menu_contact"
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="?attr/colorSurfaceContainer"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/cs"
                                    app:tint="?attr/colorOnSurface"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/contact"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_menu_exit"
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="?attr/colorError"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/exit"
                                    app:tint="?attr/colorOnError"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/exit"
                                    android:textColor="?attr/colorOnError"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>