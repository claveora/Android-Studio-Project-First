                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="@id/tv_menu_name"
                        app:layout_constraintBottom_toBottomOf="@id/tv_menu_price"
                        app:layout_constraintEnd_toStartOf="@id/til_nominal">

