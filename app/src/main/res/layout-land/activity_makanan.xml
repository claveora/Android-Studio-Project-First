            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_menu6"
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vertical_divider"
                app:layout_constraintTop_toTopOf="@id/card_menu3"
                app:layout_constraintBottom_toBottomOf="@id/card_menu3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_menu_icon6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/spage"
                        app:civ_border_color="?attr/colorOnSurface"
                        app:civ_border_width="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tv_menu_toast1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Spaghetti"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/iv_menu_icon6"
                        app:layout_constraintTop_toTopOf="@id/iv_menu_icon6"
                        app:layout_constraintEnd_toStartOf="@id/til_nominal6" />

                    <TextView
                        android:id="@+id/tv_menu_price6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 23.000"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintStart_toStartOf="@id/tv_menu_toast1"
                        app:layout_constraintTop_toBottomOf="@id/tv_menu_toast1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_nominal6"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:hint="Jml"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxBackgroundMode="outline"
                        android:textColorHint="@android:color/darker_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_menu_toast1"
                        app:layout_constraintBottom_toBottomOf="@id/tv_menu_price6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_nominal6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="12sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_lanjut_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/colorScreenBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <Button
            android:id="@+id/btn_lanjut"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="Lanjutkan"
            android:textColor="@color/colorButtonText"
            android:backgroundTint="@color/colorButtonBackground"
            />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>