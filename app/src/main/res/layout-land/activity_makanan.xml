                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/iv_menu_icon"
                        app:layout_constraintTop_toTopOf="@id/iv_menu_icon"
                        app:layout_constraintEnd_toStartOf="@id/rg_temperature" />

                    <TextView
