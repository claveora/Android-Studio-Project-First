<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    android:padding="8dp"
    tools:context=".Kalkulator">

    <!-- Display EditText (Output Area) -->
    <EditText
        android:id="@+id/angka"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="0"
        android:textAlignment="textEnd"
        android:textSize="72sp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="#666666"
        android:inputType="none"
        android:background="@android:color/transparent"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnc"
        app:layout_constraintHeight_percent="0.4"
        android:autofillHints="no" />

    <!-- GUIDELINES (Membantu menjaga konsistensi lebar kolom) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_col1_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_col2_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_col3_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <!-- BARIS 1: AC, Del, √, ÷ (Tombol Fungsi) -->

    <Button
        android:id="@+id/btnc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#7A5F4C"
        android:text="AC"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/guide_col1_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/angka" />

    <Button
        android:id="@+id/del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="⌫"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7A5F4C"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btnc"
        app:layout_constraintStart_toEndOf="@id/guide_col1_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col2_end"
        app:layout_constraintBottom_toBottomOf="@id/btnc"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/plusminus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="√"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7A5F4C"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btnc"
        app:layout_constraintStart_toEndOf="@id/guide_col2_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col3_end"
        app:layout_constraintBottom_toBottomOf="@id/btnc"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/gr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="÷"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7A5F4C"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btnc"
        app:layout_constraintStart_toEndOf="@id/guide_col3_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnc"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="4dp" />

    <!-- BARIS 2: 7, 8, 9, × -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_col1_end"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/guide_col1_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col2_end"
        app:layout_constraintBottom_toBottomOf="@id/btn7"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/guide_col2_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col3_end"
        app:layout_constraintBottom_toBottomOf="@id/btn7"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/x"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="×"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7A5F4C"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/guide_col3_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn7"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="4dp" />

    <!-- BARIS 3: 4, 5, 6, - -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_col1_end"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#C4A88A"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/guide_col1_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col2_end"
        app:layout_constraintBottom_toBottomOf="@id/btn4"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/guide_col2_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col3_end"
        app:layout_constraintBottom_toBottomOf="@id/btn4"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/ms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7A5F4C"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/guide_col3_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn4"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="4dp" />

    <!-- BARIS 4: 1, 2, 3, + -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_col1_end"
        app:layout_constraintBottom_toTopOf="@id/persen"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintStart_toEndOf="@id/guide_col1_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col2_end"
        app:layout_constraintBottom_toBottomOf="@id/btn1"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintStart_toEndOf="@id/guide_col2_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col3_end"
        app:layout_constraintBottom_toBottomOf="@id/btn1"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/ps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#7A5F4C"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@id/btn1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_col3_end"
        app:layout_constraintTop_toTopOf="@id/btn1" />

    <!-- BARIS 5: %, 0 (2x), = -->
    <Button
        android:id="@+id/persen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_col1_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp" />

    <!-- Tombol '0' diubah agar menempati dua kolom -->
    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/persen"
        app:layout_constraintStart_toEndOf="@id/guide_col1_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col3_end"
        app:layout_constraintBottom_toBottomOf="@id/persen"
        app:layout_constraintDimensionRatio="2:1"
        android:layout_marginHorizontal="4dp" />

    <!-- Tombol 'Titik' disembunyikan untuk memberikan ruang dua kolom pada tombol '0' -->
    <Button
        android:id="@+id/titik"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C4A88A"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/persen"
        app:layout_constraintStart_toEndOf="@id/guide_col2_end"
        app:layout_constraintEnd_toStartOf="@id/guide_col3_end"
        app:layout_constraintBottom_toBottomOf="@id/persen"
        app:layout_constraintDimensionRatio="1:1"
        android:visibility="gone"
        android:layout_marginHorizontal="4dp" />

    <Button
        android:id="@+id/sm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#a1866f"
        android:text="="
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@id/persen"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/guide_col3_end"
        app:layout_constraintTop_toTopOf="@id/persen"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>