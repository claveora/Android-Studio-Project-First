<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contrains2">

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="4"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/ms"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn5" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="9"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintBottom_toTopOf="@id/btn6"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btn6"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:text="2"
        app:layout_constraintStart_toStartOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="8"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        app:layout_constraintStart_toStartOf="@+id/btn5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="7"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn5"/>

    <Button
        android:id="@+id/btnc"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="C"
        app:layout_constraintHorizontal_weight="1"
        android:backgroundTint="#e34400"
        app:layout_constraintBottom_toTopOf="@id/btn8"
        app:layout_constraintEnd_toEndOf="@id/btn8"
        app:layout_constraintStart_toStartOf="@id/btn7" />

    <Button
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="#e34400"
        android:text="Del"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="@+id/btn9" />

    <Button
        android:id="@+id/gr"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="/"
        app:layout_constraintHorizontal_weight="1"
        android:backgroundTint="#e34400"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintStart_toEndOf="@+id/del" />

    <Button
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="X"
        app:layout_constraintHorizontal_weight="1"
        android:backgroundTint="#e34400"
        app:layout_constraintStart_toEndOf="@+id/del"
        app:layout_constraintTop_toBottomOf="@+id/gr" />

    <Button
        android:id="@+id/ms"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="-"
        app:layout_constraintHorizontal_weight="1"
        android:backgroundTint="#e34400"
        app:layout_constraintEnd_toEndOf="@+id/x"
        app:layout_constraintTop_toBottomOf="@+id/x" />

    <Button
        android:id="@+id/ps"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="+"
        app:layout_constraintHorizontal_weight="1"
        android:backgroundTint="#e34400"
        app:layout_constraintEnd_toEndOf="@+id/ms"
        app:layout_constraintTop_toBottomOf="@+id/ms" />

    <Button
        android:id="@+id/sm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="="
        app:layout_constraintHorizontal_weight="1"
        android:backgroundTint="#e34400"
        app:layout_constraintEnd_toEndOf="@+id/ps"
        app:layout_constraintTop_toBottomOf="@+id/ps"/>

    <Button
        android:id="@+id/titik"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="."
        android:backgroundTint="#e34400"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn2"/>

    <EditText
        android:id="@+id/angka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="0123456789"
        android:textAlignment="textEnd"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/del"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>