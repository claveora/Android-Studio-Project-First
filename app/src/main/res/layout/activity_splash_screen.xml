<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    tools:context=".SplashScreen">

    <!-- Kontainer utama (ditempatkan di tengah layar) -->
    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/kopi"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="3dp"
            android:layout_gravity="center"
            android:alpha="0"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <!-- Nama Brand -->
        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffeeenak.id"
            android:textAlignment="center"
            android:textColor="#A1866F"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:alpha="0" />

        <!-- Subjudul -->
        <TextView
            android:id="@+id/brand_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temani Hari-Harimu Dengan Nuansa Kopi Yang Lezat"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:alpha="0" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
